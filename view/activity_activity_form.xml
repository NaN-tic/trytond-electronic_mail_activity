<data>
    <xpath expr="/form/group[@id='buttons']" position="inside">
        <button name="guess"/>
    </xpath>
    <xpath expr="/form/notebook/page[@name='description']" position="before">
        <page name="mail_content">
            <field name="mail_content" widget="document" colspan="4"  height="400"/>
        </page>
    </xpath>
    <xpath expr="/form/notebook/page[@name='html']" position="inside">
        <field name="html" toolbar="0" yfill="1" widget="document"/>
    </xpath>
    <xpath expr="/form/label[@name='state']" position="replace" />
    <xpath expr="/form/field[@name='state']" position="replace">
        <group id="state" colspan="4" col="6">
            <label name="state" />
            <field name="state" />
            <label name="mail" />
            <field name="mail" />
            <group colspan="2" col="2" id="buttons">
                <button name="new"/>
                <button name="reply"/>
                <field name="have_mail" invisible="1"/>
            </group>
        </group>
    </xpath>
</data>
